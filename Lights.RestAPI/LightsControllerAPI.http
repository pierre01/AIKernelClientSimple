# OpenAPI Description
GET {{LightsAPIHost}}/openapi/v1/openapi.json
###
# Get All the lights
GET {{LightsAPIHost}}/lights
###
# Get All the rooms
GET {{LightsAPIHost}}/rooms
###


# Living Room Lights ------------------------------------------------
# Switch on the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": 
  [{
    "LightId": 0,
    "State": "On"
  },
  {
    "LightId": 1,
    "State": "On"
  },
  {
    "LightId": 2,
    "State": "On"
  }]
}
###

# Adjust the color of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": 
    [{
      "LightId": 0,
       "Color": "FF0000"
    },
    {
      "LightId": 1,
       "Color": "FF0000"
    }]
}
###

# reset the color of the lights
PATCH {{LightsAPIHost}}/lights
Content-Type: application/json
{
  "lightUpdates": [{
  "LightId": 0,
   "Color": "FFffff"
},
{
  "LightId": 1,
   "Color": "ffffff"
}]}
###
