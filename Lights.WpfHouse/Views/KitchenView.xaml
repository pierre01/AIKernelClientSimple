<UserControl
	x:Class="WpfHousePassiveClient.Views.KitchenView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfHousePassiveClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:WpfHousePassiveClient.ViewModels"
	Width="450"
	Height="800"
	MaxWidth="450"
	MaxHeight="800"
	d:DataContext="{d:DesignInstance vm:KitchenViewModel,
	                                 IsDesignTimeCreatable=True}"
	d:DesignHeight="800"
	d:DesignWidth="450"
	mc:Ignorable="d">
	<Grid ClipToBounds="True">
		<Rectangle
			x:Name="RoomDark"
			d:IsLocked="True"
			Fill="{StaticResource RoomDarkBrush}" />
		<TextBlock
			x:Name="Legend"
			Margin="175,62,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="48"
			Foreground="White"
			Text="Kitchen"
			TextWrapping="Wrap" />
		<Rectangle
			x:Name="RoomLight"
			d:IsHidden="True"
			Fill="{StaticResource RoomLightBrush}"
			Visibility="{Binding IsRoomLighten}" />
		<Rectangle
			x:Name="BarFurniture"
			Width="89"
			Height="182"
			Margin="-10,93,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Style="{StaticResource Furniture}" />
		<Rectangle
			Width="302"
			Height="100"
			Margin="155,314,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Style="{Binding Mode=OneWay, Source={StaticResource Furniture}}" />
		<Rectangle
			Width="83"
			Height="403"
			Margin="0,406,-7,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Style="{Binding Mode=OneWay, Source={StaticResource Furniture}}" />
		<Ellipse
			x:Name="BarLight1Glow"
			Width="213"
			Height="205"
			Margin="-50,25,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding BarLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding BarLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="BarLight2Glow"
			Width="213"
			Height="204"
			Margin="-50,128,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding BarLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding BarLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="BarLight3Glow"
			Width="322"
			Height="426"
