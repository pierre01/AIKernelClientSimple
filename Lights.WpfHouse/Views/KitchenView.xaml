			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="BarLigh4Glow"
			Width="348"
			Height="426"
			Margin="168,-26,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding BarLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding BarLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="MainLight1Glow"
