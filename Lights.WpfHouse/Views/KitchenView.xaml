			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Fill="{Binding MainLights.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="MainLight4"
