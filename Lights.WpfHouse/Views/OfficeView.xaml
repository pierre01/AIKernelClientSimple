<UserControl
	x:Class="WpfHousePassiveClient.Views.OfficeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfHousePassiveClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:WpfHousePassiveClient.ViewModels"
	Width="300"
	Height="300"
	MaxWidth="300"
	MaxHeight="300"
	d:DataContext="{d:DesignInstance vm:OfficeViewModel,
	                                 IsDesignTimeCreatable=True}"
	d:DesignHeight="300"
	d:DesignWidth="300"
	mc:Ignorable="d">
	<Grid ClipToBounds="True">
		<Rectangle
			x:Name="RoomDark"
			d:IsLocked="True"
			Fill="{StaticResource RoomDarkBrush}" />
		<TextBlock
			x:Name="Legend"
			Margin="0,49,0,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			FontSize="48"
			Foreground="White"
			Text="Office"
			TextWrapping="Wrap" />
		<Rectangle
			x:Name="RoomLight"
			d:IsHidden="True"
			d:IsLocked="True"
			Fill="{StaticResource RoomLightBrush}"
			Visibility="{Binding IsRoomLighten}" />
		<Rectangle
			x:Name="Desk"
			Width="170"
			Height="64"
			Margin="0,136,2,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Style="{StaticResource Furniture}" />
		<Ellipse
			x:Name="DeskLightGlow"
			Width="361"
			Height="305"
			Margin="94,18,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding DeskLight.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding DeskLight.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="DeskLight"
			Width="35"
			Height="36"
			Margin="255,150,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			d:IsLocked="True"
			Fill="{Binding DeskLight.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="FloorLightGlow"
			Width="464"
			Height="478"
			Margin="-126,27,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			d:IsLocked="True">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding FloorLight.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding FloorLight.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="FloorLight"
			Width="50"
			Height="50"
			Margin="77,241,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			d:IsLocked="True"
			Fill="{Binding FloorLight.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />


	</Grid>
</UserControl>
