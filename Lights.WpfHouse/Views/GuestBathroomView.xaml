<UserControl
	x:Class="WpfHousePassiveClient.Views.GuestBathroomView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfHousePassiveClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:WpfHousePassiveClient.ViewModels"
	Width="235"
	Height="270"
	MaxWidth="235"
	MaxHeight="270"
	d:DataContext="{d:DesignInstance vm:GuestBathroomViewModel,
	                                 IsDesignTimeCreatable=True}"
	d:DesignHeight="270"
	d:DesignWidth="235"
	mc:Ignorable="d">
	<Grid ClipToBounds="True">
		<Rectangle x:Name="RoomDark" Fill="{StaticResource RoomDarkBrush}" />
		<TextBlock
			x:Name="Legend"
			Margin="85,43,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="32"
			Foreground="White"
			Text="Bathroom"
			TextWrapping="Wrap" />
		<TextBlock
			x:Name="Legend_Copy"
			Margin="114,4,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			FontSize="32"
			Foreground="White"
			Text="Guest"
			TextWrapping="Wrap" />
		<Rectangle
			x:Name="RoomLight"
			d:IsHidden="True"
			d:IsLocked="True"
			Fill="{StaticResource RoomLightBrush}"
			Visibility="{Binding IsRoomLighten}" />
		<Rectangle
			x:Name="Sink"
			Width="75"
			Height="169"
			Margin="0,1,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Style="{StaticResource Furniture}" />
		<Ellipse
			x:Name="WallLightGlow"
			Width="240"
			Height="226"
			Margin="-91,-26,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding VanityLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding VanityLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="TopLightGlow1"
			Width="240"
			Height="247"
			Margin="66,-15,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding TopLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding TopLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="TopLightGlow2"
			Width="240"
			Height="248"
			Margin="-26,98,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Offset="0.4" Color="{Binding TopLights.OriginPointColor}" />
					<GradientStop Offset="1" Color="{Binding TopLights.EndPointColor}" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
		<Ellipse
			x:Name="VanityLight1"
			Width="35"
			Height="35"
			Margin="24,8,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Fill="{Binding VanityLights.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="VanityLight2"
			Width="35"
			Height="35"
			Margin="0,112,176,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Fill="{Binding VanityLights.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="TopLight1"
			Width="35"
			Height="34"
			Margin="0,96,31,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Fill="{Binding TopLights.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />
		<Ellipse
			x:Name="TopLight2"
			Width="35"
			Height="34"
			Margin="0,205,124,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Fill="{Binding TopLights.LightColor}"
			Stroke="#7FFFFFFF"
			StrokeThickness="5" />

	</Grid>
</UserControl>
